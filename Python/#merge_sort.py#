def merge_sort (ls):
    if len(ls) == 1:
        return ls;
    midpoint = len (ls) / 2
    ls_a = merge_sort (ls[:midpoint])
    ls_b = merge_sort (ls[midpoint+1:len(ls)]
    
                       return merge (ls_a, ls_b);

def merge (ls_a, ls_b): 
    ls_c = []
    i = 0
    j = 0
    while i < len(ls_a) and j < len(ls_b):
        if ls_a[i] <= ls_b[j]:
            ls_c.append(ls_a[i])
            i++
        else:
            ls_c.append(ls_b[j])
            j++
    return ls_c;

ls = [1,5,3,2,4]
merge_sort (ls)
print (ls)
